@page
@model RegisterModel
@{
    Layout = "~/Pages/Shared/LoginLayout.cshtml";
    ViewData["Title"] = "Register";
}

<a navbar-brand" asp-area="" asp-page="/Index" style="-webkit-filter: drop-shadow(5px 5px 5px #222);filter: drop-shadow(0px 1px 2px #136116);">
    <img style="width:150px" src="/css/imagen/logoCSpharma.png" />
</a>



<div class="row">
    <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <h2 class="row justify-content-center mb-3">Registro</h2>
        <div class="contenedorFormulario row justify-content-center">
            <div class="card p-5">


                <div>
                    <label asp-for="Input.NombreUsuario" class="labelCspharma">Nombre</label>
                    <input asp-for="Input.NombreUsuario" class="inputCspharma" autocomplete="UsuarioNombre" aria-required="true" placeholder="Introduzca su nombre (Solo nombre sin apellidos)"/>
                    <span asp-validation-for="Input.NombreUsuario"></span>
                </div>

                <br />

                <div>
                    <label asp-for="Input.ApellidosUsuario" class="labelCspharma">Apellidos</label>
                    <input asp-for="Input.ApellidosUsuario" class="inputCspharma" autocomplete="UsuarioApellidos" aria-required="true" placeholder="Introduzca sus apellidos" />
                    <span asp-validation-for="Input.ApellidosUsuario" class="text-danger"></span>
                </div>

                <br />

                <div>
                    <label asp-for="Input.Email" class="labelCspharma">Correo electrónico</label>
                    <input asp-for="Input.Email" class="inputCspharma" autocomplete="username" aria-required="true" placeholder="Introduzca su correo electrónico"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <br />

                <div>
                    <label asp-for="Input.Password" class="labelCspharma">Contraseña</label>
                    <input asp-for="Input.Password" class="inputCspharma" autocomplete="new-password" aria-required="true" placeholder="Introduzca su contraseña" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <br />

                <div>
                    <label asp-for="Input.ConfirmPassword" class="labelCspharma">Confirme su contraseña</label>
                    <input asp-for="Input.ConfirmPassword" class="inputCspharma" autocomplete="new-password" aria-required="true" placeholder="Confirme su contraseña " />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <br />
                <br />

                <div class="row justify-content-center" style="width: 50%; margin: auto;">
                    <button id="login-submit" type="submit" class="botonCspharma">Registrarse</button>
                   
                </div>

                <br />
                <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">¿Ya tienes una cuenta? Inicia sesión</a>

            </div>
        </div>
    </form>
</div>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
