@page
@model IndexModel


@{
    ViewData["Title"] = "Home page";

}

@if (User.IsInRole("Administrador"))
{
    <div class="card w-50 m-auto">
        <div class="card-header">
            Usuario Administrador
        </div>
        <div class="card-body">
            Tienes acceso a todos los apartados: Lista de pedidos, Gestion de usuarios.
        </div>
    </div>
}

@if (User.IsInRole("Empleado"))
{
    <div class="card w-50 m-auto">
        <div class="card-header">
            Usuario Empleado
        </div>
        <div class="card-body">
            Tienes acceso a los apartados: Lista de pedidos.
        </div>
    </div>
}

@if (User.IsInRole("Usuario"))
{
    <div class="card w-50 m-auto">
        <div class="card-header">
            Usuario Estándar
        </div>
        <div class="card-body">
            No tienes acceso a ningún apartado, un administrador debe darte acceso a los apartados.
        </div>
    </div>
}




@if (!User.Identity.IsAuthenticated)
{

    <div class="card w-50 m-auto">
        <div class="card-header">
            <h3>Cuentas de prueba para inicio de sesión</h3>
        </div>

        <div class="card-body row g-3 m-auto ">
            <div class="col-sm-5 m-3">
                <div class="card p-3">
                    Usuario Administrador<hr />
                    administrador@gmail.com<br />
                    Usuario1.
                </div>
            </div>
            <div class="col-sm-5 m-3">
                <div class="card p-3">
                    Usuario Empleado<hr />
                    empleado@gmail.com<br />
                    Usuario1.
                </div>
            </div>



            <div class="col-sm-6 m-auto">
                <div class="card p-3">
                    Usuario Estandar<hr />
                    usuario@gmail.com<br />
                    Usuario1.
                </div>
            </div>
        </div>
    </div>
}