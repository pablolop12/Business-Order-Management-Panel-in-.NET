<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CsPharma_V4</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CsPharma_V4.styles.css" asp-append-version="true" />
</head>
<body>
    <header>


        <div class="barraNavegacion m-3">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm  mb-5">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-page="/Index">
                        <img style="width:100px" src="/css/imagen/logoCSpharma.png" />
                    </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">

                            @if (User.Identity.IsAuthenticated)
                            {


                                @if (User.IsInRole("Administrador") || User.IsInRole("Empleado"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-white" asp-area="" asp-page="/EstadoPedido/Index">Listado de pedidos</a>
                                    </li>
                                }


                                @if (User.IsInRole("Administrador"))
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-white" asp-area="" asp-page="/Gestionusuario/Index">Gestión de usuarios</a>
                                    </li>
                                }


                            }




                        </ul>
                    </div>
                    <partial name="_LoginPartial" />
                </div>
            </nav>
        </div>
        <br />
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div class="barraFooter">
        <footer class="footer text-light ">
            <div class="container">
                &copy; 2023 - CSPharma Proyecto Final - Pablo López Luján
            </div>
        </footer>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>